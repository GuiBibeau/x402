{
  "name": "x402",
  "version": "0.2.0",
  "main": "./src/_cjs/index.js",
  "module": "./src/_esm/index.js",
  "types": "./src/_types/index.d.ts",
  "scripts": {
    "build": "pnpm clean && pnpm build:cjs && pnpm build:esm && pnpm build:types",
    "build:cjs": "tsc --project ./tsconfig.cjs.json && printf '{\"type\":\"commonjs\"}' > ./src/_cjs/package.json",
    "build:esm": "tsc --project ./tsconfig.esm.json && printf '{\"type\": \"module\",\"sideEffects\":false}' > ./src/_esm/package.json",
    "build:types": "tsc --project ./tsconfig.types.json",
    "clean": "rm -rf src/_esm src/_cjs src/_types",
    "start": "tsx --env-file=.env index.ts",
    "watch": "tsc --watch",
    "format": "prettier -c .prettierrc --write \"**/*.{ts,js,cjs,json,md}\"",
    "format:check": "prettier -c .prettierrc --check \"**/*.{ts,js,cjs,json,md}\"",
    "lint": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts"
  },
  "keywords": [],
  "license": "Apache-2.0",
  "author": "Coinbase Inc.",
  "repository": "https://github.com/coinbase/x402",
  "description": "x402 Payment Protocol",
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^9.24.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "3.5.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.2.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@coinbase/cdp-sdk": "^1.1.1",
    "axios": "^1.7.9",
    "viem": "^2.23.1",
    "zod": "^3.24.2"
  },
  "type": "module",
  "exports": {
    "./shared": {
      "types": "./src/_types/shared/index.d.ts",
      "import": "./src/_esm/shared/index.js",
      "require": "./src/_cjs/shared/index.js"
    },
    "./shared/evm": {
      "types": "./src/_types/shared/evm/index.d.ts",
      "import": "./src/_esm/shared/evm/index.js",
      "require": "./src/_cjs/shared/evm/index.js"
    },
    "./schemes": {
      "types": "./src/_types/schemes/index.d.ts",
      "import": "./src/_esm/schemes/index.js",
      "require": "./src/_cjs/schemes/index.js"
    },
    "./client": {
      "types": "./src/_types/client/index.d.ts",
      "import": "./src/_esm/client/index.js",
      "require": "./src/_cjs/client/index.js"
    },
    "./verify": {
      "types": "./src/_types/verify/index.d.ts",
      "import": "./src/_esm/verify/index.js",
      "require": "./src/_cjs/verify/index.js"
    },
    "./facilitator": {
      "types": "./src/_types/facilitator/index.d.ts",
      "import": "./src/_esm/facilitator/index.js",
      "require": "./src/_cjs/facilitator/index.js"
    },
    "./types": {
      "types": "./src/_types/types/index.d.ts",
      "import": "./src/_esm/types/index.js",
      "require": "./src/_cjs/types/index.js"
    }
  },
  "files": [
    "*",
    "!**/*.test.ts"
  ]
}